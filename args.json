{
"type": "GDLNet",
"model": {
	"adaptive": true,
	"K": 5,
	"M": 8,
	"C": 3,
	"P": 7
},
"paths": {
	"save": "nets/test",
	"ckpt": null
},
"train": {
	"loaders": {
		"batch_size": 1,
		"crop_size": 64,
		"trn_path_list": ["dataset/CBSD432"],
		"val_path_list": ["dataset/Kodak"],
		"tst_path_list": ["dataset/CBSD68"],
		"load_color": true
	},
	"fit": {
		"epochs": 20,
		"noise_std": [20,30],
		"val_freq": 5,
		"save_freq": 1,
		"backtrack_thresh": 2,
		"verbose": true,
		"clip_grad": 5e-2,
		"demosaic": true,
		"mcsure": false
	},
	"opt": {
		"lr": 1e-3
	},
	"sched": {
		"gamma": 0.95,
		"step_size": 50
	}
}
}
